       
{ 

  "operation_def": {
    "$id": "http://ditrit.io/schemas/operation_def",
    ".*": { 
      "dictProperties": {
        "description": { "$ref": "description" },
        "inputs":      { "$ref": "properties" },
        "implementation": {
          "anyOf": [
            { "instanceof": "Str"},
            { "dictRequired": [ "primary" ],
              "dictProperties": {
                "primary": {
                  "anyOf": [
                    { "instanceof": "Str" },
                    { "$ref": "artifact_def"}
                  ]
                },
                "dependencies": {
                  "listItems": {
                    "AnyOf": [
                      { "instanceof": "Str" },
                      { "$ref": "artifact_def"}
                    ]
                  }
                }
              }
            }
          ]
        } 
      }
    }
  },

  "interface_types": {
    "$id": "http://ditrit.io/schemas/interface_types",
    "dictIdsDefinition": {
      "dictProperties": {
        "derived_from": { "instanceof": "Str" },
        "version":      { "instanceof": "Version" },
        "metadata":     { "$ref": "metadata" },
        "description":  { "$ref": "description" },
        "inputs":       { "$ref": "properties" }
      },
      "dictPatternProperties": { "$ref": "operation_def" }
    }
  },

  "interface_defs": {
    "$id": "http://ditrit.io/schemas/interface_defs",
    "dictRequired": [ "type" ],
    "dictProperties": {
      "type":       { "instanceof": "Str" },
      "inputs":     { "$ref": "properties" }
    },  
    "dictPatternProperties": { "$ref": "operation_def" }
  }

}
